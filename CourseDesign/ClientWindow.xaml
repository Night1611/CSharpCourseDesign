<Window x:Class="CourseDesign.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseDesign"
        mc:Ignorable="d"
        Title="用户聊天界面" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="182">
            <TabItem Header="最近消息" Margin="-2,0,0,-1.8">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="联系人" Margin="0,0,-17,-1.8">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="群组" Margin="12.2,0,-37.2,-1.8">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
