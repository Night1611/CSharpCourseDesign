<Window x:Class="P2P_TCP.P2PClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2P_TCP"
        mc:Ignorable="d"
        Title="" Height="448.4" Width="658.533">
    <DockPanel  LastChildFill="True">
        <Menu x:Name="menu" VerticalAlignment="Center"  DockPanel.Dock="Top" Margin="0,0,0.2,394.4" >
            <MenuItem Header="文件(_F)" InputGestureText="Ctrl+F" Name="MenuItem_File" >
                <MenuItem Header="好友列表保存到文件" HorizontalAlignment="Left" Click="MenuItem_Click" />
                <MenuItem Header="消息列表保存到文件" HorizontalAlignment="Left" Click="MenuItem_Click_1"/>
                <MenuItem Header="从文件导入好友列表" HorizontalAlignment="Left" Click="MenuItem_Click_2" />
                <MenuItem Header="从文件导入消息列表" HorizontalAlignment="Left" Click="MenuItem_Click_3" />
            </MenuItem>
            <MenuItem Header="登出(_L)" InputGestureText="Ctrl+L" Name="MenuItem_Logout" Click="MenuItem_Logout_Click"  />
            <MenuItem Header="退出(_E)" InputGestureText="Ctrl+E" Name="MenuItem_Exit" Click="MenuItem_Exit_Click" />
            <MenuItem Header="关于(_A)" InputGestureText="Ctrl+A" Name="MenuItem_About" Click="MenuItem_About_Click"  />
        </Menu>
        <Grid HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="650"  DockPanel.Dock="Left" Margin="0,-394,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="261.2,372,0,0" TextWrapping="Wrap" Text="本机IP地址和端口号:" VerticalAlignment="Top" Width="323" TextAlignment="Center" Grid.Column="1"/>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="8.4,0,0,373" TextWrapping="Wrap" Text="联系人列表" VerticalAlignment="Bottom" Width="229" TextAlignment="Center" Grid.Column="1"/>
            <ListView x:Name="FriendListView" SelectionMode="Multiple" HorizontalAlignment="Left" Height="240" Margin="8.4,31,0,0" VerticalAlignment="Top" Width="229" Grid.Column="1">
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridViewColumn DisplayMemberBinding="{Binding Path=friendIP}" Header="好友IP" Width="160"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=friendPort}" Header="好友port" Width="60"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBlock x:Name="SendMessageTextBlock" HorizontalAlignment="Left" Margin="293.4,293,0,0" TextWrapping="Wrap" Text="发送内容" VerticalAlignment="Top" Width="67" TextAlignment="Center" Grid.Column="1"/>
            <TextBox x:Name="SendMessageTextBox" HorizontalAlignment="Left" Height="23" Margin="392.4,288,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="192" Grid.Column="1"/>
            <Button x:Name="SendMessageButton" Content="发送信息" HorizontalAlignment="Left" Margin="392.2,319,0,0" VerticalAlignment="Top" Width="192" Click="SendMessageButton_Click" Grid.Column="1"/>
            <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="261.4,0,0,373" TextWrapping="Wrap" Text="收到的信息" VerticalAlignment="Bottom" TextAlignment="Center" Width="323" Grid.Column="1"/>
            <ListBox x:Name="FriendListBox" HorizontalAlignment="Left" Height="240" Margin="261.4,31,0,0" VerticalAlignment="Top" Width="323" Grid.Column="1"/>
            <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="8.4,293,0,0" TextWrapping="Wrap" Text="增加的好友IP" VerticalAlignment="Top" TextAlignment="Center" Height="17" Width="104" Grid.Column="1"/>
            <TextBox x:Name="addFriendIPTextBox" HorizontalAlignment="Left" Height="23" Margin="117.4,288,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
            <TextBlock x:Name="textBlock4" Margin="8.4,321,0,0" TextWrapping="Wrap" Text="增加的好友端口号" Height="23" Width="104" TextAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
            <TextBox x:Name="addFriendPortTextBox" HorizontalAlignment="Left" Height="23" Margin="117.4,316,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
            <Button x:Name="AddFriendButton" Content="添加联系人至列表" HorizontalAlignment="Left" Margin="117.2,344,0,0" VerticalAlignment="Top" Width="120" Click="AddFriendButton_Click" Grid.Column="1"/>
            <TextBox x:Name="SaveFilePath" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="117.2,368,0,0" TextWrapping="Wrap" Text="D:\Files" VerticalAlignment="Top" Width="120" VerticalContentAlignment="Center"/>
            <TextBlock x:Name="textBlock5" Grid.Column="1" HorizontalAlignment="Left" Margin="10.2,372,0,0" TextWrapping="Wrap" Text="文件接收目录" VerticalAlignment="Top" Height="18" Width="102" TextAlignment="Center"/>
            <Button x:Name="SendFileButton" Content="发送文件" HorizontalAlignment="Left" Margin="392.2,344,0,0" VerticalAlignment="Top" Width="192" Grid.Column="1" Click="SendFileButton_Click"/>
            <Button x:Name="DeleteFriendButton" Content="删除选中的联系人" HorizontalAlignment="Left" Margin="10.2,344,0,0" VerticalAlignment="Top" Width="102" Grid.Column="1" Click="DeleteFriendButton_Click"/>
        </Grid>
    </DockPanel>

</Window>
